<Window x:Class="MyWpfApp.LayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfApp"
        mc:Ignorable="d"
        Title="LayerWindow" Height="450" Width="800">
    <Grid>
        <Grid Grid.Row="0" Grid.Column="0" x:Name="GridBackground" ZIndex="0" Background="Gray">
        </Grid>
        <Grid Grid.Row="0" Grid.Column="0" x:Name="GridFront" ZIndex="1" Background="Orange">
        </Grid>
        <Grid Grid.Row="0" Grid.Column="0" ZIndex="2">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="10">
                <Button x:Name="BtnChange" Content="Change" Padding="10" Background="Green" FontSize="24"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
