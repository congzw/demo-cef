<Window x:Class="MyWpfApp.TraceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfApp"
        mc:Ignorable="d"
        Title="TraceWindow" Height="450" Width="800">
    <Grid>
        <Grid Grid.Row="0" Grid.Column="0" x:Name="GridFrontPage" ZIndex="0">
        </Grid>
        <Grid Grid.Row="0" Grid.Column="0" x:Name="GridControls" ZIndex="1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Button DockPanel.Dock="Bottom" x:Name="BtnStart" Content="开启" Width="75"  Margin="5,0,0,0"/>
                <Button DockPanel.Dock="Bottom" x:Name="BtnStop" Content="停止" Width="75"  Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>