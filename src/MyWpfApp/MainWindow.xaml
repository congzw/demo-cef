<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid Grid.Row="0" Grid.Column="0" x:Name="GridBackground" ZIndex="0" Background="Gray">
        </Grid>
        <Grid Grid.Row="0" Grid.Column="0" x:Name="GridFront" ZIndex="1" Background="Orange">
        </Grid>
        <Grid Grid.Row="0" Grid.Column="0" ZIndex="2">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                <TextBlock x:Name="TxtMessage" Visibility="Collapsed" Foreground="Red"  FontSize="24" Padding="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
