<Window x:Class="VideoDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Grid.Row="0" Grid.Column="0" x:Name="GridBackground" ZIndex="1" Opacity="1">
            <MediaElement x:Name="DemoVideo" Source="video/small.mp4" Stretch="Fill"  />
            <Button x:Name="PlayButton" HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="Play" />
            <TextBlock x:Name="TxtMessage" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Foreground="Red"/>
        </Grid>
    </Grid>
</Window>
