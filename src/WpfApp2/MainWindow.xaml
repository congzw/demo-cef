<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid Grid.Row="0" Grid.Column="0" x:Name="GridBackPage" ZIndex="0">
            <Image x:Name="DemoControl" Source="_Local/images/player-bg.jpg" Stretch="Fill"/>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="0" x:Name="GridFrontPage" ZIndex="1">
            <Button x:Name="BtnLoad" Content="加载网页" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="75"/>
        </Grid>
    </Grid>
</Window>
