<Page x:Class="WpfApp3.ChildPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChildPage">
    <Grid x:Name="TheContainer" Background="Green">
        <Grid Grid.Row="0" Grid.Column="0" x:Name="GridBackPage" ZIndex="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="Message" Text="ChildPage" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="0" x:Name="GridFrontPage" ZIndex="1">
        </Grid>
    </Grid>
</Page>
